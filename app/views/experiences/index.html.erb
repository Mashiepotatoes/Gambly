<!--------- banner --------->
<div class="exp-index-banner">
  <div class="main-banner h-100">

      <%= image_tag(asset_path('scott-trento-mUFFI4CkmAI-unsplash.jpg'),style: "width:100%;height:100%") %>
  </div>

  <!------ banner/search bar ------>
  <div class="container-landing-small">
    <div class="landing-wrapper">

      <div class="landing-img">
        <%= image_tag(asset_path('logo-white.png')) %>
      </div>

      <div class="m-2">
        <%= simple_form_for :experience, url: experiences_path, method: :get do |f| %>
          <div class="search-form-control mt-3 ">
            <input class="form-control required " type="text" name="query" id="query" />
            <button name="button" type="submit" class="button-none" >
              <i class="fas fa-search search-icon"></i>
            </button>
          </div>
        <% end %>
      </div>

      <div class="btn-wrapper row px-3">
        <div class="col-6 ">
          <div class="text-center btn-border">
              <%= link_to "Take a Gambly", experiences_path,class: "text-purple" %>
          </div>
        </div>

        <div class="col-6">
          <div class="text-center btn-border">
            <%= link_to "View all experiences", experiences_path,class: "text-purple" %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<!--- dropdown list for location filter --->
 <form action="/experiences/filter" method="get">
  <label>Filter by Location</label><br>
     <select name="filter">
      <option>North</option>
      <option>South</option>
      <option>East</option>
      <option>West</option>
    </select>
    <button>Submit</button>
 </form>
</div>

<!--------- cards ---------->
<div class="container my-5">
  <div class="cards">
    <% @experiences.each do |experience| %>
        <%= link_to experience_path(experience) do  %>
          <img src=<%= experience.photo_url%> class="experience-img">
          <div class="rounded-bottom p-3 d-flex flex-column background-white">
            <strong><%= experience.name %> </strong>
            <p> <%= experience.price %> </p>
            <small class="text-muted"> Book now for today </small>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
