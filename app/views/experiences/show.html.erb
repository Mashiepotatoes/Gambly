<div class="container mt-5">
  <div class="card-trip">
    <img src=<%=@experience.photo_url%> />
    <% if current_user.has_favorited?(@experience) %>
    <div class="heart"><i data-experience-id=<%= @experience.id %> class="fas fa-heart"></i></div>
    <% else %>
    <div class="heart"><i data-experience-id=<%= @experience.id %> class="far fa-heart"></i></div>
    <% end %>
    <div class="card-trip-container p-3">
      <div class="card-trip-infos">
        <h2><%= @experience.name.capitalize %></h2>
        <div class="experience-details">
          <% @experience.details.split('@').each do |detail| %>
            <p>â€¢ <%= detail %></p>
          <% end %>
        </div>
        <p><%= @experience.details %></p>
      </div>
      <div class="card-trip-checkout">
        <h3 class="card-trip-pricing float-right"><%= humanized_money_with_symbol(@experience.price) %></h3>
        <%= form_tag orders_path do %>
          <%= hidden_field_tag 'experience_id', @experience.id %>
          <%= submit_tag 'Book now', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
    <%= link_to "Back", experiences_path%>
  </div>
</div>
