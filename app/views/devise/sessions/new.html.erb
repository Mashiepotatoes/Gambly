<div class="container login-container ">
  <div class="login-form row justify-content-center align-items-center mt-5">
    <div class="col-md-12 col-lg-10 ">
      <div class="all-round-box wrap d-md-flex shadowed" >

        <div class="sign-in-box-inner w-50 p-5" style="background-color:#FFFFFF">
          <h2>Sign In</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs all-round-box">

                <%= f.input :username,

                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "username" } %>


                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
            <%= f.button :submit, "Log in",class: "btn-login-page text-decoration-none text-center mb-3"  %>
            </div>
          <% end %>

          <%= link_to "Forgot your password?", new_password_path(resource_name),class: "text-muted" %><br />
        </div>

        <div class="logo-box w-50 p-5 d-flex align-items-center" style="background-color: #5821a6">

          <div class="wrapper text-center">
            <div class="mb-4 w-100">
              <%= image_tag(asset_path('logo-yellow.png'),{class:"gambly-img w-100"}) %>
            </div>
            <div>
              <%= link_to "Sign up", new_registration_path(resource_name), class:"text-decoration-none px-4 py-2 btn-login-page-signup" %>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>
