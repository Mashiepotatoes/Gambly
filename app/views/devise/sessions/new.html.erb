<div class="container ">
  <div class="row justify-content-center align-items-center my-5">
    <div class="col-md-12 col-lg-10 ">
      <div class="wrap d-md-flex px-3 ">

        <div class="w-50 p-5" style="background-color:#FFFFFF">
          <h2>Sign In</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">

                <%= f.input :username,

                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "username" } %>


                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in",class: "mb-2 btn-block btn-warning p-2 text-decoration-none text-center"  %>
            </div>
          <% end %>

          <%= link_to "Forgot your password?", new_password_path(resource_name),class: "btn-block btn-primary p-2 text-decoration-none text-center" %><br />
        </div>

        <div class="rounded w-50 text-wrap d-flex align-items-center p-5 text-center" style="background-color:#548CA8">
          <div class="w-100 text-white">
            <h2>Welcome to login</h2>
            <p>Don't have an account?</p>
            <%= link_to "Sign up", new_registration_path(resource_name),class: "btn-block border border-primary p-2 text-white text-decoration-none" %><br />
          </div>
        </div>


      </div>
    </div>
  </div>
</div>
